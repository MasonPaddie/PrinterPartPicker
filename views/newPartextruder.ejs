<%- include('./partials/headerPartejs') %>
<div class="container">
    <form action="/parts/<%= type %>" method="POST">
        <h1>New Extruder Entry</h1>

        <label for="type">Type</label>
        <input type="text" name="type" value="<%= type %>" readonly><br/>

        <label for="name">Name</label>
        <input type="text" name="name" required><br/>

        <label for="diameter">Diamater</label>
        <input type="text" name="diameter"> <br/>

        <label for="img">Image</label>
        <input type="text" name="img"> <br/>

        <label for="price">Price</label>
        <input type="number" name="price" required> <br/>

        <label for="directDrive">Direct Drive</label>
        <input type="checkbox" name="directDrive"> <br/>

        <label for="bowden">Bowden</label>
        <input type="checkbox" name="bowden"> <br/>
        
        <input type="submit" value="Make Extruder">
    </form>
</div>
<%- include('./partials/footer.ejs') %>